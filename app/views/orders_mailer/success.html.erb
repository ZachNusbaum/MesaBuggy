<h1>Thank you!</h1>
<p>Hello <%= @order.name %>,</p>
<p>Your order has been received. We will contact you via email with any further updates.</p>
<hr>
<h4>Customer Info</h4>
<p>
	<%= @order.name.upcase %> <br>
	<%= @order.address.upcase %> <br>
	<%= @order.city.upcase %>, <%= @order.state.upcase %> <%= @order.zip %>
</p>

<h4>Items</h4>
	<table class="table">
		<thead>
			<tr>
				<th>Product</th>
				<th>Quantity</th>
				<th>Unit Price</th>
				<th>Line Total</th>
			</tr>
		</thead>

		<tbody>
			<% @order.cart_items.each do |item| %>
				<tr>
					<td><%= item.product.name %></td>
					<td><%= item.qty %></td>
					<td><%= item.product.price.format %></td>
					<td><%= item.line_total.format %></td>
				</tr>
			<% end %>
			<tr>
				<td colspan="2"></td>
				<td class="text-muted"><em>Discount</em></td>
				<td class="text-muted"><%= @order.discount_total.format %></td>
			</tr>
		</tbody>
	</table>
	<hr>
	Payment ID: <%= @order.payment_id %> &mdash; Amount: <%= @order.total.format %>