<%= render 'shared/category_nav' %>
<!-- Page Content -->
<div class="container">

  <!-- Jumbotron Header -->
  <header class="jumbotron my-4">
    <h1 class="display-3">A Warm Welcome!</h1>
    <p class="lead">Welcome to <i>Ozzy and Dez' Pet Store! We carry a large selection of pet products for all of your needs.</i></p>
    <a href="#" class="btn btn-primary btn-lg">Explore</a>
  </header>

  <!-- Page Features -->
  <h4 class="text-center">Featured Items</h4>
  <div class="row text-center">
  	<div class="card-deck">
  	<% Product.all.where(featured: true).limit(4).each do |product| %>
		<!--<div class="col-lg-3 col-md-6 mb-4">-->
	      <div class="card">
	      	<% if product.images.any? %>
	      		<img class="card-img-top2" src="<%= url_for(product.images.first.variant(resize: "200x200")) %>" alt="">
	      	<% else %>
	      		<img class="card-img-top2" src="http://placehold.it/200x200" alt="">
	      	<% end %>

	        <div class="card-body">
	          <h4 class="card-title"><%= product.name %></h4>
	          <p class="card-text"><%= truncate strip_tags(product.description), length: 75 %></p>
	          <h5><%= product.price.format %></h5>
	          <p class="text-center"><%= link_to 'Details', product_path(product), class: 'btn btn-primary btn-sm' %></p>
	        </div>
	        <div class="card-footer">
	        	<div class="btn-group">
	        		<%= link_to 'Add to Cart', cart_add_item_path(product.id), method: :post, class: 'btn btn-success btn-sm' %>
	        		<%= link_to 'Buy Now', 'javascript:alert("Not yet implemented.")', class: 'btn btn-info btn-sm' %>
	        	</div>
	        </div>
	      </div>
	    <!--</div>-->
  	<% end %>
  </div>
  </div>
  <!-- /.row -->

</div>
<!-- /.container -->